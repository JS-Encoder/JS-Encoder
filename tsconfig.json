{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/",
    "lib": ["es2015", "es2016", "dom"],
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "removeComments": true,
    "pretty": true,
    "paths": {
      "vue": ["node_modules/vue/types"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}