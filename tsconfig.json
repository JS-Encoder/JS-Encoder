{
  "types": ["node"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "importHelpers": false,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["unplugin-vue-define-options/macros-global", "node"],
    "baseUrl": ".",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@type/*": ["src/type/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@scripts/*": ["src/scripts/*"],
      "@plugins/*": ["src/plugins/*"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
